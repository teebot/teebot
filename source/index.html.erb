---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %> <div class="title-date"><%= article.date.strftime('%B %e, %Y') %></div></h2>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%= article.body %>
<% end %>

<% if paginate %>
  <% if prev_page %>
    <div class="page-prev"><%= link_to 'Previous page', prev_page %></div>
  <% end %>
  <% if next_page %>
    <div class="page-next"><%= link_to 'Next page', next_page %></div>
  <% end %>
<% end %>
